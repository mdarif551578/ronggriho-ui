
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to products, but restrict writes to authenticated users.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow users to read their own user data and orders.
    // Restrict creation to the authenticated user and updates to the user themselves.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    match /orders/{orderId} {
      allow read, create: if request.auth != null;
      // Only allow the user who owns the order to read it.
      // allow read: if request.auth != null && resource.data.uid == request.auth.uid;
    }
  }
}
